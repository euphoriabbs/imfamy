{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": false,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": ["node"],
    "baseUrl": ".",
    "typeRoots": ["@types"],
    "lib": ["es2020"],
    "skipLibCheck": true
  },
  "exclude": [
    ".vscode",
    "aws",
    "assets",
    "docs",
    "hooks",
    "node_modules",
    "platforms",
    "private",
    "public",
    "spec"
  ]
}
